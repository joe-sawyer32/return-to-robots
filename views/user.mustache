<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/user.css">
    <title>User Profile</title>
</head>

<body>
    <div class="profileNavLink">
      <a href="/users">Return To All Users</a>
    </div>
    {{#user}}
    <div class="picAndLabels">
        <div class="avatarWrapper">
          <img class="avatarPic" src={{avatar}} alt=name + " Profile Pic">
        </div>
        <div class="labels">
          {{#university}}
            <h4 class="label">University</h4>
          {{/university}}
          <h4 class="label">Skills</h4>
        </div>
    </div>
    <div class="infoBlock">
      <div class="basicInfo">
        <h1>{{name}}</h1>
        <div class="addAndEmploy">
        {{#address}}
          <h4 class="leftInfo">{{#city}} {{city}}, {{/city}} <a href="/users/country/{{country}}">{{country}}</a> |&nbsp;</h4>
        {{/address}}
        {{#job}}
          <h4 class="rightInfo"> {{job}}, {{company}}</h4>
        {{/job}}
        {{^job}}
          <h4 class="rightInfo available">Available for hire</h4>
        {{/job}}
        </div>
        <h4 class="emailAndPhone">{{email}} | {{phone}}</h4>
      </div>
      <div class="eduAndSkills">
        {{#university}}
          <h4 class="edu">{{university}}</h4>
        {{/university}}
        {{#skills}}
          <a href="/users/skill/{{.}}"><h4 class="skills">{{.}}</h4></a>
        {{/skills}}
      </div>
    </div>
    {{/user}}
</body>

</html>